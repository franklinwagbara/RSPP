@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="../css/bootstrap.css" rel="stylesheet" />
    <link href="../css/font.css" rel="stylesheet" />
    <link href="../css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />

    <style>
        .container {
            bottom: 0;
            width: 50%;
            background: rgba(255, 255, 255, 0.5);
            color: black;
            float: left;
            min-height: 100%;
            position: relative;
            position: absolute;
        }
    </style>
</head>

<body class="login-body">
    <div class="main">
        <div class="inner-wrapper">
            <div class="brand">
                <div class="logo-wrapper">
                    <img src="~/images/nsclogo.png" class="logo" />
                </div>

                <div class="brand-name">
                    <h1>Nigerian Shippers' Council</h1>
                    <h3>Online Registration of Regulated Port Service Providers & Users</h3>
                </div>

            </div>

            <div class="btns">
                <a href="../Home/VerifyCertificate/" class="btn btn-block btn-md btn-primary btn-size">Click To Verify Certificate</a><br />
                <a href="../Account/Login/" class="btn btn-block btn-md btn-success btn-size">LogIn</a><br />
                <a href="../Account/AccountRegister/" class="btn btn-block btn-md btn-warning btn-size">Register</a>
            </div>

            <div class="row" style="margin-top: 10%">
                <div class="col-md-12">
                    <div class="alert alert-warning alert-dismissable text-justify" style="height:auto" role="alert">
                        <marquee><b class="text-danger">NOTICE BELOW</b></marquee><br />
                        <ol>
                            <li>To register with Nigeria Shipper's Council, ensure you have a valid and accessible email address. All registration correspondence will be sent to your email address.</li>
                            <li>If you already started your registration and have validated your account via your email, click the <strong>login</strong> button to complete your registration process.</li>
                            <li>To verify certificate, click the <strong>verify</strong> button and enter the certificate number</li>
                        </ol>
                    </div>
                </div>
            </div>


            <!-- The Verify Certificate Modal -->
            <div class="modal" id="modalVerifyCertificate">
                @using (Html.BeginForm("Login", "ResendEmailConfirmation", FormMethod.Post, new { @id = "VerifyCertificateFormid" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="modal-dialog">
                        <div class="modal-content">

                            <!-- Modal Header -->
                            <div class="modal-header">
                                <h4 class="modal-title" style="font-weight:500;font-size:large;">Check The Validity of Your Permit</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>

                            <!-- Modal body -->
                            <div class="modal-body" >
                                <div name="verifyCertificateErrors" style="font-weight:300;font-size:medium;color:red;"></div>

                                <div class="form-group">
                                    <label class="control-label">Provide The Permit Number</label>
                                    <div>
                                        <input type="text" class="form-control input-lg" id="certificateId" value="">
                                    </div>
                                </div>
                            </div>

                            <!-- Modal footer -->
                            <div class="modal-footer">
                                <button type="button" class="btn btn-success" type="submit" id="btnVerifyCertificate">Submit</button>
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                            </div>

                        </div>
                    </div>

                }

            </div>


        </div>
    </div>

    <script src="~/js/jquery-3.3.1.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {


        });

    </script>

</body>
</html>
